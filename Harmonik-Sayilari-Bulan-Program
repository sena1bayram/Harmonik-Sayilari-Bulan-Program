import java.util.*;
import java.io.*;

class Solution{
    public static void main(String []argh) {
        int sayi;
        double result=0.0;

        Scanner input = new Scanner(System.in);
        System.out.println("Sayı  Giriniz: ");
        sayi=input.nextInt();
        for(double i=1;i<=sayi;i++)
        {
            result+=(1/i);
        }
        System.out.println("SONUÇ: "+result);

    }

}



